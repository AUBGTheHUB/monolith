{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Hot Reload Go API",
            "command": "make reload-api",
            "type": "shell"
        },
        {
            "label": "Hot Reload Python API",
            "type": "shell",
            "command": "poetry",
            "args": ["run", "start"],
            "options": {
                "cwd": "${workspaceFolder}/packages/py-api"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
